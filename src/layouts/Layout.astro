---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const locale = Astro.currentLocale;
const defaultCanonicalUrl = new URL(Astro.url.pathname, Astro.site);

const siteName = "Mit Freuden";
const defaultDescription =
  "Mit Freuden builds custom B2B software that delights. From idea to launch, we deliver production-ready web applications and mobile apps using Ruby on Rails and PostgreSQL.";

const {
  title = siteName,
  description = defaultDescription,
  canonicalURL = defaultCanonicalUrl,
} = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta charset="UTF-8" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={locale === "de" ? "de_DE" : "en_US"} />
    <meta
      property="og:locale:alternate"
      content={locale === "de" ? "en_US" : "de_DE"}
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-ddn7DIy6SQOfO-S93YWTB.js"
    ></script>
    <script>
      ((window.plausible =
        window.plausible ||
        function () {
          (plausible.q = plausible.q || []).push(arguments);
        }),
        (plausible.init =
          plausible.init ||
          function (i) {
            plausible.o = i || {};
          }));
      plausible.init();
    </script>

    <slot name="head" />
  </head>
  <body class="bg-neutral-50 text-gray-900">
    <div class="flex min-h-screen flex-col">
      <Header />

      <main class="container mx-auto max-w-6xl grow px-4 py-16 sm:px-6 lg:px-8">
        <slot />
      </main>

      <Footer />
    </div>

    <script>
      import "@tailwindplus/elements";
    </script>
  </body>
</html>
