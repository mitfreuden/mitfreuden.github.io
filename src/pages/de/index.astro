---
import '../../styles/global.css'

import Layout from '../../layouts/Layout.astro';

const title = 'Mit Freuden';
const description = 'Was bringt Freude ins Leben? Genau: so richtig, richtig gut gemachte Software. Das finden wir auch.';
---

<Layout title={title} description={description} lang="de">
  <article class="prose prose-lg max-w-none">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl text-gray-900 mb-6">
      Mit Freuden
    </h1>

    <p class="text-lg sm:text-xl text-gray-700 mb-6">
      Was bringt Freude ins Leben?
      Genau: so richtig, <em>richtig</em> gut gemachte Software.
      Das finden wir auch.
    </p>
  </article>
</Layout>
