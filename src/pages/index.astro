---
const title = 'Mit Freuden';
const description = 'What brings joy to life? That\'s right: it\'s really, really well-made software. We think so too.';

const canonicalURL = `https://mitfreuden.com`;
---

<html lang="en">
<head>
  <title>{title}</title>
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <meta charset="UTF-8" />
  <meta name="description" content={description} />

  <script>
    window.location.replace(navigator.language.startsWith('de') ? '/de' : '/en');
  </script>

  <noscript>
    <meta http-equiv="refresh" content="0; url=/en" />
  </noscript>
</head>
<body>
</body>
</html>