---
import { getRelativeLocaleUrl } from "astro:i18n";
import LocaleSwitcher from "./LocaleSwitcher.astro";

const navLinksMap = {
  en: [{ label: "Legal Notice", href: `/en/legal-notice/` }],
  de: [{ label: "Impressum", href: `/de/impressum/` }],
};
const navLinks = navLinksMap[Astro.currentLocale];
---

<footer class="border-t border-gray-200 bg-white py-6">
  <div
    class="container mx-auto max-w-6xl px-4 text-sm text-gray-600 sm:px-6 lg:px-8"
  >
    <div class="flex flex-col justify-between gap-x-5 text-nowrap sm:flex-row">
      <div class="flex justify-between gap-x-10 sm:order-2">
        <nav class="flex gap-x-5">
          {
            navLinks.map((link) => (
              <a href={link.href} class="transition-colors hover:text-rose-600">
                {link.label}
              </a>
            ))
          }
        </nav>
        <LocaleSwitcher />
      </div>
      <p class="mt-3 text-center sm:order-1 sm:mt-0">
        &copy; 2025 <svg
          class="-mt-0.5 inline-block h-6"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 40 40"
          stroke="currentColor"
        >
          <!-- Square Brackets [ ] - happy eyes ^^ -->
          <g>
            <path
              d="M 10 4 L 4 4 L 4 36 L 10 36"
              fill="none"
              stroke-width="1.5"
              stroke-linecap="round"></path>
            <path
              d="M 30 4 L 36 4 L 36 36 L 30 36"
              fill="none"
              stroke-width="1.5"
              stroke-linecap="round"></path>
            <path
              d="M 10 24 Q 20 32 30 24"
              fill="none"
              stroke-width="1.5"
              stroke-linecap="round"></path>
            <path
              d="M 12 18 Q 14 15 16 18"
              stroke-width="1.5"
              stroke-linecap="round"
              fill="none"></path>
            <path
              d="M 24 18 Q 26 15 28 18"
              stroke-width="1.5"
              stroke-linecap="round"
              fill="none"></path>
          </g>
        </svg>
        Mit Freuden
      </p>
    </div>
  </div>
</footer>
